<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181e1e"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <TextView
        android:id="@+id/study_word_grouplist_grouptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="第一组"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/study_word_grouplist_sep0"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:background="#282d30" />

    <TextView
        android:id="@+id/study_word_grouplist_groupwords_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="单词"
        android:textColor="#89e5dd"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/study_word_grouplist_groupwords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:maxLines="100"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:text="hahaha\nhahaha\nhahaha\nhahaha"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/study_word_grouplist_sep1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="25dp"
        android:background="#282d30" />

    <TextView
        android:id="@+id/study_word_grouplist_Memory_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="记忆方法"
        android:textColor="#89e5dd"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/study_word_grouplist_Memory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:maxLines="100"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:text="hahaha\nhahaha\nhahaha\nhahaha"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>