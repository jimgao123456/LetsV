<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment2_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="震惊，一代老ga王梓铭竟然公然强奸村头老母猪未遂"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fragment2_item_url"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:textSize="0in"
        android:enabled="false"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/fragment2_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/gray_8f"
        android:typeface="monospace"
        android:text="2016-11-03" />

</LinearLayout>
