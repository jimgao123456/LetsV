<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backcolor1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_text_changepassword"
        app:srcCompat="@color/background_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_text_changepassword"
            android:layout_width="331dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="    修改密码"
            android:textSize="22dp"
            app:layout_constraintEnd_toStartOf="@+id/activity_setting_changepassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backcolor0" />

        <ImageView
            android:id="@+id/activity_setting_changepassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_text_changepassword"
            app:layout_constraintTop_toBottomOf="@+id/backcolor0"
            app:srcCompat="@drawable/qmui_icon_chevron" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backcolor2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_text_sounds"
        app:srcCompat="@color/background_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_text_sounds"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="    声音"
            android:textSize="22dp"
            app:layout_constraintEnd_toStartOf="@+id/activity_setting_sounds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backcolor1" />

        <com.suke.widget.SwitchButton
            android:id="@+id/activity_setting_sounds"
            android:layout_width="103dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/backcolor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_text_sounds"
            app:layout_constraintTop_toBottomOf="@+id/backcolor1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backcolor3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_text_volume"
        app:srcCompat="@color/background_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_text_volume"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="    音量大小"
            android:textSize="22dp"
            app:layout_constraintEnd_toStartOf="@+id/activity_setting_volume"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backcolor2" />

        <SeekBar
            android:id="@+id/activity_setting_volume"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/backcolor3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_text_volume"
            app:layout_constraintTop_toBottomOf="@+id/backcolor2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backcolor0"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/background_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_text_vibrate"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="    振动"
            android:textSize="22dp"
            app:layout_constraintEnd_toStartOf="@+id/activity_setting_vibrate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backcolor3" />

        <com.suke.widget.SwitchButton
            android:id="@+id/activity_setting_vibrate"
            android:layout_width="103dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/backcolor0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_text_vibrate"
            app:layout_constraintTop_toBottomOf="@+id/backcolor3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backcolor4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_text_vibrate"
        app:srcCompat="@color/background_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_text_quality"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="    图片质量"
            android:textSize="22dp"
            app:layout_constraintEnd_toStartOf="@+id/activity_choose_quality"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backcolor4" />

        <Spinner
            android:id="@+id/activity_choose_quality"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:entries="@array/picquality"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_text_quality"
            app:layout_constraintTop_toBottomOf="@+id/backcolor4" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_text_quality"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@color/background_white" />

</LinearLayout>
